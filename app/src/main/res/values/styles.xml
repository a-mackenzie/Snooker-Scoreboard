<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Font for player names -->
    <style name="playerFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>

    <!-- Font for points scores -->
    <style name="scoreFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>

    <!-- Font for frame scores -->
    <style name="scoreFrameFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/myDarkBlue</item>
    </style>

    <!-- Font for Points Diff. and Points Avl. text -->
    <style name="pointsDiffFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/myDarkBlue</item>
    </style>

    <!-- Font for Points Diff. and Points Avl. text -->
    <style name="floatingFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/myDarkBlue</item>
    </style>

    <!-- Font for foul buttons -->
    <style name="foulButtonFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Font for control buttons -->
    <style name="controlButtonFont">
        <item name="android:fontFamily">@font/viga</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
