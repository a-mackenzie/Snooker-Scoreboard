<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleFont">
        <item name="android:fontFamily">@font/exo_2_semibold</item>
        <item name="android:textColor">@color/myRed</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="playerFont">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/myGreen</item>
    </style>

    <style name="scoreFont">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/myBlack</item>
    </style>
    
    <style name="scoreFrameFont">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/myRed</item>
    </style>

    <style name="pointsDiffFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/myRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/allerta</item>
    </style>

    <style name="resetButton">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/myBlack</item>
        <item name="android:background">@color/myGreen</item>
    </style>



</resources>
